<h2>Editting Book</h2>
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <h4>Title</h4>
    <%= f.text_field :title, value: @book.title %>

  <h4>Opinion</h4>
    <%= f.text_area :body, value: @book.body %><br>

  <%= f.submit 'Update Book', class: "btn btn-primary" %>
<% end %>

<p><%=link_to "Show", book_path %> | <%=link_to"Back", books_path %></p>

