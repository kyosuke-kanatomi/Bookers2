<div class="container">
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="row">

    <div class="col-lg-3">
      <%= render 'books/list', {user: @user, book: @book} %>
    </div>

    <div class="col-lg-9">
      <h2>Books</h2>
        <table class="table table-condensed">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "/images/no_image.jpg" %></td>
              <td><%= link_to book.title , book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        CopyRight Infratop.inc
      </div>
    </div>
  </div>
</footer>