<div class="container">

  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>
  
  <div class="row">
    <div class="top-message col-md-offset-3 col-md-6">
      <h1>
        Welcome to <span class="glyphicon glyphicon-book"></span>Bookers!!
      </h1>

      <p>
        In <span class="glyphicon glyphicon-book"></span>Bookers,<br>you can share and exchange your opinions , inpressions , and emotions<br> about varioius books!
      </p>

      <div class="btn-wrapper">
        <div class="row">
          <p class="btn btn-info col-xs-10 col-xs-offset-1">
            <%=link_to "Log in", user_session_path %>
          </p>
        </div>
        <div class="row">
          <p class="btn btn-success col-xs-10 col-xs-offset-1">
            <%=link_to "Sign up", new_user_registration_path %>
          </p>
        </div>
      </div>
    </div>
  </div>

</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        CopyRight Infratop.inc
      </div>
    </div>
  </div>
