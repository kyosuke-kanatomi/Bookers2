<div class="container">

  <div class="row">

    <div class="col-lg-3">
      <h2>User info</h2>
        <%= form_for(@user) do |f| %>
          <% if @user.errors.any? %>
          <h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

          <h4>Name</h4>
           <%= f.text_field :name %>

          <h4>Image</h4>
           <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

          <h4>Introduction</h4>
           <%= f.text_area :introduction %><br>

          <%= f.submit 'Update User' %>

        <% end %>
    </div>
  </div>
</div>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        CopyRight Infratop.inc
      </div>
    </div>
  </div>
</footer>